<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    style="@style/Widget.Material3.CardView.Outlined"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Local Folder Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_smartphone_24"
                    android:tint="?attr/colorPrimary"
                    android:contentDescription="Local folder"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textLocalPath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local Path"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <!-- Remote Folder Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_small">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cloud_24"
                    android:tint="?attr/colorSecondary"
                    android:contentDescription="Remote folder"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/textRemotePath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remote Path"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

            </LinearLayout>

            <!-- Sync Info Row -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textSyncInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync Info"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="@dimen/spacing_small"
                android:alpha="0.7"/>

        </LinearLayout>

        <!-- Split Button (M3 Pattern) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Primary Action Button (Sync) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sync"
                android:textSize="12sp"
                android:minWidth="64dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:cornerRadius="20dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Left"
                style="@style/Widget.Material3.Button.TonalButton.Icon"
                app:icon="@drawable/ic_sync_24"
                app:iconSize="16dp"/>

            <!-- Divider Line -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp"
                android:layout_marginStart="-1dp"
                android:layout_marginEnd="-1dp"
                android:background="?attr/colorOutline"
                android:alpha="0.3"/>

            <!-- Menu Button (Split) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="20dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Right"
                app:icon="@drawable/ic_more_vert_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="18dp"
                style="@style/Widget.Material3.Button.TonalButton.Icon"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
