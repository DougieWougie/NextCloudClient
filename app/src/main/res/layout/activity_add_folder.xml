<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.Material3.Light"
            app:title="Add Sync Folder"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Server Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cloud_24"
                    android:tint="?attr/colorPrimary"
                    android:contentDescription="Server"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nextcloud Server"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textServerUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="@dimen/spacing_large"/>

            <!-- Local Folder Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_smartphone_24"
                    android:tint="?attr/colorPrimary"
                    android:contentDescription="Local folder"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local Folder"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                style="@style/Widget.Material3.CardView.Outlined"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textLocalFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No folder selected"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:fontFamily="sans-serif-medium"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textLocalFolderPath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:visibility="gone"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSelectLocalFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Local Folder"
                android:layout_marginBottom="@dimen/spacing_large"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_smartphone_24"
                app:iconGravity="start"/>

            <!-- Remote Folder Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_small">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cloud_24"
                    android:tint="?attr/colorSecondary"
                    android:contentDescription="Nextcloud folder"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nextcloud Folder"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                style="@style/Widget.Material3.CardView.Outlined"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textRemoteFolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:fontFamily="sans-serif-medium"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSelectRemoteFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Nextcloud Folder"
                android:layout_marginBottom="@dimen/spacing_large"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_cloud_24"
                app:iconGravity="start"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_medium"/>

            <!-- Sync Options Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_medium">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sync_24"
                    android:tint="?attr/colorPrimary"
                    android:contentDescription="Sync options"
                    android:layout_marginEnd="@dimen/spacing_small"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sync Options"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Two-way sync"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:fontFamily="sans-serif-medium"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sync changes both ways"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchTwoWaySync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/spacing_large">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WiFi only"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:fontFamily="sans-serif-medium"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Only sync when connected to WiFi"
                        android:textAppearance="?attr/textAppearanceBodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchWifiOnly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddFolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Folder"
                android:layout_marginTop="@dimen/spacing_medium"
                app:icon="@drawable/ic_folder_24"
                app:iconGravity="start"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
