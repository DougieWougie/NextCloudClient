<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    style="@style/Widget.Material3.CardView.Outlined"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconFolder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_folder_24"
            android:tint="?attr/colorPrimary"
            android:contentDescription="Folder"
            android:layout_marginEnd="@dimen/spacing_medium"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textFolderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folder Name"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textFolderPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right_24"
            android:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="Navigate"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
